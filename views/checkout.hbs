<nav class="navbar-fixed-top navbar-default navbar">


</nav>
<div class="container" style="margin-top:120px; background: gray">
    <!-- banner -->
    <div class="banner banner1">
        <div class="container">
            <h2>Great Offers on <span>Mobiles</span> Flat <i>35% Discount</i></h2>
        </div>
    </div>
    <!-- breadcrumbs -->
    <div class="breadcrumb_dress">
        <div class="container">
            <ul>
                <li><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a> <i>/</i></li>
                <li>Products</li>
            </ul>
        </div>
    </div>
    <!-- //breadcrumbs -->
    <div class="row">
        <!-- Title -->
        <ol></ol>
    </div>
    <h3 class="col-md-offset-5">Thông tin sản phẩm</h3>
    <div class="row">
        <!-- Title -->
        <ol></ol>
    </div>
        <div class="table-responsive col-md-10 col-md-offset-1">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <td>No.</td>
                    <td>Tên sản phẩm</td>
                    <td>Số lượng</td>
                    <td>Tổng giá</td>
                </tr>
                </thead>
                <tbody>
                {{#each products}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{product_name}}</td>
                        <td>{{quantiti}}</td>
                        <td>${{product_price}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>

        <div class="row">
            <!-- Title -->
            <ol></ol>
        </div>
    <div class="row" style="text-align:center;margin-top:15px;">
        <b>Tổng cộng</b> ${{total}}
    </div>
    <div class="row product-row" style="background: #EEEEEE	">
        <div class="review_grids">
            <h5 class="col-md-offset-5">Thông tin thanh toán</h5>
            <form action="/users/checkout/confirm" method="post">
                <input type="text" name="name" value="Name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Họ tên người nhận';}" required="">
                <input style="margin-left: 20px" type="text" name="phonenumber" placeholder="Số điện thoại người nhận" required="">
                <input type="text" name="address" value="Địa chỉ giao hàng" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Địa chỉ giao hàng';}" required="">
                <textarea id="note" name="note" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Ghi chú khi giao hàng';}" required="">Ghi chú khi giao hàng</textarea>
                <button type="submit" class="btn btn-default btn-success"><span class="fa fa-shopping-cart"></span>&nbsp;Checkout</button>
                {{#each products}}
                    <input type="hidden" name="id" value="{{product_id}}">
                    <input type="hidden" name="quantity" value="{{quantiti}}">
                {{/each}}
            </form>
        </div>
    </div>
    <div class="row">
        <ol></ol>
    </div>
</div>

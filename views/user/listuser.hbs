<div class="templatemo-content-container">
    <div class="templatemo-flex-row flex-content-row">
        <div class="col-1">
            <div class="panel panel-default templatemo-content-widget white-bg no-padding templatemo-overflow-hidden">
                <i class="fa fa-times"></i>
                <div class="panel-heading templatemo-position-relative"><h2 class="text-uppercase">User Table</h2></div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead >
                        <tr>
                            <th>UserName</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Update</th>
                            <th>Lock</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{# each items}}
                            <tr>
                                <td hidden>{{this._id}}</td>
                                <td>{{this.username}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.role_name}}</td>
                                <td>
                                    <div class="form-group">
                                        <a href="/admin/user/{{this.id}}/update">
                                        <button type="button" class="templatemo-blue-button" style="width: 100%">Update</button>
                                        </a>
                                    </div></td>
                                <td>
                                    {{#if_eq this.role_id "1"}}

                                    {{else if_eq this.role_id "2"}}
                                        <div class="form-group">
                                            <a href="/admin/user/{{this.id}}/lock"
                                               onclick="return confirm('Are you sure you want to Lock the user which you choose ?')">
                                                <button type="button" class="templatemo-blue-button" style="width: 100%">Lock</button>
                                            </a>
                                        </div>
                                    {{else}}

                                    {{/if_eq}}
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

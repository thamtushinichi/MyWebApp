<div class="templatemo-content-container">
    <div class="templatemo-flex-row flex-content-row">
        <div class="col-1">
            <div class="panel panel-default templatemo-content-widget white-bg no-padding templatemo-overflow-hidden">
                <i class="fa fa-times"></i>
                <div class="panel-heading templatemo-position-relative"><h2 class="text-uppercase">Category Table</h2></div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Update Category</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{# each items}}
                            <tr>
                              <td hidden>{{this._id}}</td>
                               <td><a href="/admin/category/listcategory/{{this.id}}">{{this.category_name}}</a></td>
                                <td>
                                    <div class="form-group">
                                        <a href="/admin/category/listcategory/{{this._id}}/update">
                                            <button type="button" class="templatemo-blue-button">Update</button>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


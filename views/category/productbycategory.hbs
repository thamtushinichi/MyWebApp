<div class="templatemo-content-container">
    <div class="templatemo-flex-row flex-content-row">
        <div class="col-1">
            <div class="panel panel-default templatemo-content-widget white-bg no-padding templatemo-overflow-hidden">
                <i class="fa fa-times"></i>
                <div class="panel-heading templatemo-position-relative"><h2 class="text-uppercase">Product Table By {{category.category_name}}</h2></div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price (USD)</th>
                            <th hidden>Category</th>
                            <th hidden>Publisher</th>
                            <th>Image</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{# each items}}
                            <tr>
                                <td hidden>{{this._id}}</td>
                                <td> <a href="/admin/product/listproduct/{{this._id}}/detail">{{this.product_name}}</a></td>
                                <td>{{this.price}}</td>
                                <td hidden>{{this.category_id}}</td>
                                <td hidden>{{this.publisher_id}}</td>
                                <td><div class="templatemo-content-widget white-bg col-1 templatemo-position-relative templatemo-content-img-bg">
                                    <img src="{{this.product_image}}" class="img-responsive content-bg-img">
                                </div></td>
                                <td>
                                    <div class="form-group">
                                        <a href="/admin/product/listproduct/{{this.id}}/update">
                                        <button type="button" class="templatemo-blue-button">Update</button>
                                        </a>
                                    </div></td>
                                <td><div class="form-group">
                                    <a href="/admin/category/listcategory/product/{{this.id}}/delete"
                                       onclick="return confirm('Are you sure you want to delete item which you choose ?')">
                                        <button type="button" class="templatemo-blue-button">Delete</button>
                                    </a>
                                </div></td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
